<?xml version="1.0" encoding="utf-8"?>
<com.kavi.droid.emenu.views.FoodListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/foodItemImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/style_em_img_view_round_corner"/>


    <LinearLayout
        android:id="@+id/detailContainerLinearLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:gravity="bottom"
        android:layout_toLeftOf="@+id/qtySelectLinearLayout"
        android:layout_toRightOf="@+id/foodItemImageView"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food item name"
            android:textSize="15dp"
            android:id="@+id/foodItemNameTextView"
            android:layout_weight="0.87" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/itemRatingBar"
            android:numStars="5"
            android:stepSize="0.1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/itemSizeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/smallRadioBtn"
                    android:text="SMALL"
                    android:textSize="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/mediumRadioBtn"
                    android:text="MEDIUM"
                    android:textSize="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"/>

                <RadioButton
                    android:id="@+id/largeRadioBtn"
                    android:text="LARGE"
                    android:textSize="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qtySelectLinearLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/itemPriceLinearLayout"
        android:layout_toStartOf="@+id/itemPriceLinearLayout" >

        <ImageButton
            android:id="@+id/plusQtyImgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_plus"/>
        <TextView
            android:id="@+id/qtyTextView"
            android:text="1X"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_qty"/>
        <ImageButton
            android:id="@+id/minusQtyImgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_minus"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemPriceLinearLayout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/addItemBtn"
        android:layout_toStartOf="@+id/addItemBtn" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="22dp"
            android:textStyle="bold"
            android:id="@+id/amountTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LKR"
            android:layout_marginLeft="5dp"
            android:id="@+id/currencyTextView"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addItemBtn"
        android:src="@drawable/icon_add_item"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</com.kavi.droid.emenu.views.FoodListItemView>